---
interface Props {
  subtitle?: string;
}

const { subtitle } = Astro.props;
---

<div class="text-center mb-10">
  <h2 class="text-3xl sm:text-4xl font-bold text-navy-800 mb-3">
    <slot />
  </h2>
  {subtitle && (
    <p class="text-gray-500 max-w-2xl mx-auto">{subtitle}</p>
  )}
  <div class="mt-4 w-16 h-1 bg-accent-500 mx-auto rounded-full"></div>
</div>

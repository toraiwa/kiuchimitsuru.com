---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  category: string;
  slug: string;
}

const { title, description, pubDate, category, slug } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="bg-white rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-200 overflow-hidden group">
  <a href={`/blog/${slug}/`} class="block p-6">
    <div class="flex items-center gap-3 mb-3">
      <span class="inline-block bg-navy-50 text-navy-700 text-xs font-medium px-3 py-1 rounded-full">
        {category}
      </span>
      <time class="text-sm text-gray-400" datetime={pubDate.toISOString()}>
        {formattedDate}
      </time>
    </div>
    <h3 class="text-lg font-bold text-gray-800 group-hover:text-navy-700 transition-colors duration-200 mb-2">
      {title}
    </h3>
    <p class="text-sm text-gray-500 leading-relaxed line-clamp-2">
      {description}
    </p>
    <div class="mt-4 text-navy-600 text-sm font-medium flex items-center gap-1">
      続きを読む
      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </a>
</article>
